<?xml version="1.0" encoding="utf-8"?>

<resources>

    <style name="Theme.Chat" parent="@android:style/Theme.Holo">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_chat</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.Chat</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Chat</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.Chat</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.Chat</item>
        <item name="android:actionBarStyle">@style/ActionBar.Transparent.Chat</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_chat</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_chat</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Chat</item>
        <item name="android:editTextStyle">@style/EditText.Chat</item>
        <item name="android:buttonStyle">@style/Button.Chat</item>

        <item name="android:imageButtonStyle">@style/ImageButton.Chat</item>

        <item name="android:listViewStyle">@style/ListView.Chat</item>

        <item name="android:listViewWhiteStyle">@style/ListView.Chat.White</item>

        <item name="android:spinnerItemStyle">@style/SpinnerItem.Chat</item>
        
    </style>

    <style name="ActionBar.Solid.Chat" parent="@android:style/Widget.Holo.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_chat</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_chat</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_chat</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Chat</item>
    </style>

    <style name="ActionBar.Transparent.Chat" parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@drawable/ab_transparent_chat</item>
        <item name="android:progressBarStyle">@style/ProgressBar.Chat</item>
    </style>

    <style name="PopupMenu.Chat" parent="@android:style/Widget.Holo.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_chat</item>	
    </style>

    <style name="DropDownListView.Chat" parent="@android:style/Widget.Holo.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_chat</item>
    </style>

    <style name="ActionBarTabStyle.Chat" parent="@android:style/Widget.Holo.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_chat</item>
    </style>

    <style name="DropDownNav.Chat" parent="@android:style/Widget.Holo.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_chat</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_chat</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_chat</item>
    </style>
    
    <style name="ProgressBar.Chat" parent="@android:style/Widget.Holo.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_chat</item>
    </style>
    
    <style name="ActionButton.CloseMode.Chat" parent="@android:style/Widget.Holo.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_chat</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Chat.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.Chat</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.Chat</item>
    </style>

	<style name="EditText.Chat" parent="android:Widget.EditText">
	  <item name="android:background">@drawable/edit_text_holo_dark</item>
	  <item name="android:textColor">#ffffff</item>
  </style>

  <style name="Button.Chat" parent="android:Widget.Button">
	  <item name="android:background">@drawable/btn_default_holo_dark</item>
	  <item name="android:minHeight">48dip</item>
	  <item name="android:minWidth">64dip</item>
	  <item name="android:textColor">#ffffff</item>
  </style>

  <style name="ImageButton.Chat" parent="android:Widget.ImageButton">
	  <item name="android:background">@drawable/btn_default_holo_dark</item>
  </style>

  <style name="ListView.Chat" parent="android:Widget.ListView">
      <item name="android:listSelector">@drawable/list_selector_holo_dark</item>
  </style>

  <style name="ListView.Chat.White" parent="android:Widget.ListView.White">
      <item name="android:listSelector">@drawable/list_selector_holo_dark</item>
  </style>

  <style name="SpinnerItem.Chat" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
      <item name="android:textColor">#ffffff</item>
  </style>

</resources>